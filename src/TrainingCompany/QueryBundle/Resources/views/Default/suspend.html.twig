{% extends "TrainingCompanyQueryBundle::layout.html.twig" %}
{% import "TrainingCompanyQueryBundle:Macro:pageheader.html.twig" as formatter %}

{% block maincontent %}
<div class="container" role="main">
    {{ formatter.header('Udsæt undersøgelsen', 'fa fa-paperclip', company) }}
    {{ formatter.title('Du har valgt at udsætte undersøgelsen') }}
    <p>
        Dine svar indtil nu er registreret og du kan lukke din browser nu.
        <span class="hidden-xs"><br /></span> 
