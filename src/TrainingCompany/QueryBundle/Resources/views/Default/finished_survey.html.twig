{% extends "TrainingCompanyQueryBundle::layout.html.twig" %}
{% import "TrainingCompanyQueryBundle:Macro:pageheader.html.twig" as formatter %}

{% block maincontent %}
<div class="container" role="main">
    {{ formatter.header('Undersøgelsen er færdig', 'fa fa-check-square-o', company) }}
{% if survey.state == 2 %}
    {{ formatter.title('Denne undersøgelse er afsluttet') }}
    <p>
        Vi takker fordi du tog dig tid til at deltage i undersøgelsen.
    </p>
{% elseif survey.state == 3 %}
    {{ formatter.title('Denne undersøgelse er udløbet') }}
    <p>
        Du har angivet at du ikke ønskede at deltage i undersøgelsen.
        For at sikre at din besvarelse ikke ændres, kan undersøgelsen ikke genoptages.
        Men du har mulighed for at anmode om en ny invitation via en kommentar.
    </p>
{% endif %}
    <p>
        Hvis du ønsker at kommentere undersøgelsen skal du klikke dig videre...
    </p>
    {{ formatter.footer(null, { 'path': path('_feedback_with_id', { 'id': survey.token }), 'label': 'Kommenter' }) }}
</div>
{% endblock %}
